# Environment Variables Template
# Copy this file to .env and fill in your actual values

# Database Configuration
DB_PASSWORD=your_secure_database_password
POSTGRES_DB=crypto_signals
POSTGRES_USER=crypto_user

# Redis Configuration
REDIS_PASSWORD=your_secure_redis_password

# JWT and Encryption (must be exactly 32 characters)
JWT_SECRET_KEY=your_jwt_secret_key_32_characters_
ENCRYPTION_KEY=your_encryption_key_32_characters

# Telegram Bot Token (get from @BotFather)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token

# Binance API Keys (get from Binance API Management)
BINANCE_API_KEY=your_binance_api_key
BINANCE_API_SECRET=your_binance_api_secret

# External API Keys
COINGECKO_API_KEY=your_coingecko_api_key
TRADINGECONOMICS_API_KEY=your_trading_economics_api_key
TRON_API_KEY=your_tron_api_key

# Payment Providers
NOWPAYMENTS_API_KEY=your_nowpayments_api_key
BTCPAY_API_KEY=your_btcpay_api_key
BTCPAY_URL=https://your-btcpay-server.com

# Monitoring
GRAFANA_PASSWORD=your_grafana_admin_password

# Domain and SSL
DOMAIN=your-domain.com
SSL_EMAIL=your-email@domain.com

# Backup Configuration
BACKUP_ENCRYPTION_KEY=your_backup_encryption_key_32_chars
BACKUP_S3_BUCKET=your-backup-s3-bucket
BACKUP_S3_ACCESS_KEY=your_s3_access_key
BACKUP_S3_SECRET_KEY=your_s3_secret_key

